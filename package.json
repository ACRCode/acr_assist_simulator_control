{
  "$schema": "./node_modules/ng-packagr/package.schema.json",
  "name": "@americancollegeofradiology/acr-assist-simulator",
  "version": "1.0.81",
  "license": "MIT",
  "author": {
    "name": "American College Of Radiology",
    "url": "https://www.acr.org/"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/ACRCode/acr_assist_simulator_control.git"
  },
  "ngPackage": {
    "whitelistedNonPeerDependencies": [
      "@angular/cdk",
      "expr-eval",
      "jquery",
      "ng-pick-datetime",
      "ngx-drag-scroll",
      "string",
      "rxjs",
      "ngx-bootstrap",
      "timers",
      "stream",
      "xml2js",
      "testruleengine",
      "ng6-toastr-notifications"
    ],
    "lib": {
      "entryFile": "./public_api.ts",
      "styleIncludePaths": [
        "./src/assets/css",
        "node_modules/bootstrap/dist/css"
      ]
    }
  },
  "scripts": {
    "ng": "ng",
    "start": "ng serve",
    "build": "ng build --prod",
    "test": "ng test",
    "test-watch-disabled": "ng test --watch=false --sourcemaps=false",
    "lint": "ng lint",
    "e2e": "ng e2e",
    "build-lib": "ng lint && ng-packagr -p ng-package.json  && cd ./dist && npm pack && move /y  *.tgz  ../../libs",
    "build-ci": "ng lint  && ng build --prod --no-progress",
    "build-publish-npm": "ng-packagr && cd ./dist  && npm publish --access public",
    "build-package": "ng-packagr",
    "test-ci": "ng test --watch=false  --browsers ChromeHeadless"
  },
  "dependencies": {
    "@angular/cdk": "^8.0.2",
    "expr-eval": "^1.2.2",
    "jquery": "^3.4.1",
    "ng-pick-datetime": "^7.0.0",
    "ngx-bootstrap": "^5.0.0",
    "ngx-drag-scroll": "~7.4.3",
    "rxjs": "^6.5.2",
    "stream": "0.0.2",
    "string": "^3.3.3",
    "testruleengine": "^1.0.57",
    "timers": "^0.1.1",
    "xml2js": "^0.4.19",
    "ng6-toastr-notifications": "^1.0.4"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "~0.803.6",
    "@angular/animations": "^8.2.8",
    "@angular/cli": "~8.3.6",
    "@angular/common": "^8.2.8",
    "@angular/compiler": "^8.2.8",
    "@angular/compiler-cli": "^8.2.8",
    "@angular/core": "^8.2.8",
    "@angular/forms": "^8.2.8",
    "@angular/language-service": "^8.2.8",
    "@angular/platform-browser": "^8.2.8",
    "@angular/platform-browser-dynamic": "^8.2.8",
    "@angular/router": "^8.2.8",
    "@types/core-js": "^2.5.0",
    "@types/jasmine": "~3.3.8",
    "@types/jasminewd2": "~2.0.3",
    "@types/jquery": "3.3.30",
    "@types/lodash": "^4.14.134",
    "@types/node": "~8.9.4",
    "bootstrap": "^3.3.7",
    "classlist.js": "^1.1.20150312",
    "codelyzer": "^5.0.0",
    "core-js": "^3.2.1",
    "font-awesome": "^4.7.0",
    "i": "^0.3.6",
    "jasmine-core": "~3.4.0",
    "jasmine-spec-reporter": "~4.2.1",
    "karma": "~4.1.0",
    "karma-chrome-launcher": "~2.2.0",
    "karma-coverage-istanbul-reporter": "~2.0.1",
    "karma-jasmine": "~2.0.1",
    "karma-jasmine-html-reporter": "^1.4.0",
    "lodash": "^4.17.11",
    "ng-packagr": "^5.5.0",
    "protractor": "~5.4.0",
    "sax": "^1.2.4",
    "ts-node": "~7.0.0",
    "tslint": "~5.15.0",
    "typescript": "~3.5.3",
    "web-animations-js": "^2.3.2",
    "xml-parser": "^1.2.1",
    "xmlreader": "^0.2.3",
    "zone.js": "^0.9.1"
  }
}
