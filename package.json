{
  "$schema": "./node_modules/ng-packagr/package.schema.json",
  "name": "@americancollegeofradiology/acr-assist-simulator",
  "version": "1.0.58",
  "license": "MIT",
  "author": {
    "name": "American College Of Radiology",
    "url": "https://www.acr.org/"
  },
  "ngPackage": {
    "whitelistedNonPeerDependencies": [
      "expr-eval",
      "jquery",
      "ng-pick-datetime",
      "ngx-drag-scroll",
      "string",
      "rxjs",
      "rxjs-compat",
      "ngx-bootstrap",
      "timers",
      "stream",
      "xml2js",
      "@angular/http",
      "testruleengine",
      "ng6-toastr-notifications"
    ],
    "lib": {
      "entryFile": "./public_api.ts",
      "styleIncludePaths": [
        "./src/assets/css",
        "node_modules/bootstrap/dist/css"
      ]
    }
  },
  "scripts": {
    "ng": "ng",
    "start": "ng serve",
    "build": "ng build --prod",
    "test": "ng test",
    "test-watch-disabled": "ng test --watch=false --sourcemaps=false",
    "lint": "ng lint",
    "e2e": "ng e2e",
    "build-lib": "ng lint && ng-packagr -p ng-package.json  && cd ./dist && npm pack && move /y  *.tgz  ../../libs",
    "build-ci": "ng lint  && ng build --prod --no-progress",
    "build-publish-npm": "ng-packagr && cd ./dist  && npm publish --access public",
    "build-package": "ng-packagr",
    "test-ci": "ng test --watch=false  --browsers ChromeHeadless"
  },
  "dependencies": {
    "@angular/http": "^6.0.6",
    "expr-eval": "^1.2.2",
    "jquery": "^3.3.1",
    "ng-pick-datetime": "^5.2.6",
    "ngx-bootstrap": "^3.0.1",
    "ng6-toastr-notifications": "^1.0.4",
    "ngx-drag-scroll": "~2.0.4",
    "rxjs": "^6.2.1",
    "rxjs-compat": "^6.2.1",
    "stream": "0.0.2",
    "string": "^3.3.3",
    "testruleengine": "^1.0.54",
    "timers": "^0.1.1",
    "xml2js": "^0.4.19"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "~0.6.8",
    "@angular/animations": "^6.1.10",
    "@angular/cli": "^6.0.8",
    "@angular/common": "^6.0.6",
    "@angular/compiler": "^6.0.6",
    "@angular/compiler-cli": "^6.0.6",
    "@angular/core": "^6.0.6",
    "@angular/forms": "^6.0.6",
    "@angular/language-service": "^6.0.6",
    "@angular/platform-browser": "^6.0.6",
    "@angular/platform-browser-dynamic": "^6.0.6",
    "@angular/router": "^6.0.6",
    "@types/core-js": "^2.5.0",
    "@types/jquery": "3.3.1",
    "@types/lodash": "4.14.110",
    "bootstrap": "^3.3.7",
    "classlist.js": "^1.1.20150312",
    "core-js": "^2.5.7",
    "font-awesome": "^4.7.0",
    "i": "^0.3.6",
    "jasmine-core": "~3.1.0",
    "jasmine-spec-reporter": "~4.2.1",
    "karma": "~2.0.4",
    "karma-chrome-launcher": "~2.2.0",
    "karma-coverage-istanbul-reporter": "^2.0.1",
    "karma-jasmine": "~1.1.2",
    "karma-jasmine-html-reporter": "^1.1.0",
    "lodash": "^4.17.13",
    "ng-packagr": "^3.0.3",
    "node-mv": "^0.1.3",
    "popper": "^1.0.1",
    "protractor": "~5.3.2",
    "ts-node": "~7.0.0",
    "tsickle": "~0.33.0",
    "typescript": "^2.7.2",
    "web-animations-js": "^2.3.1",
    "xml-parser": "^1.2.1",
    "xmlreader": "^0.2.3",
    "zone.js": "^0.8.26",
    "sax": "^1.2.4"
  }
}
